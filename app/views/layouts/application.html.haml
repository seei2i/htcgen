!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "HealthTestingCenters.com"
      %meta{:content => content_for?(:description) ? yield(:description) : "Health Testing Centers", :name => "description"}
      - if action_name == 'show'
        %link{:href => "http://htcgen.herokuapp.com/static.css", :media => 'all', :rel => 'stylesheet', :type => "text/css"}
        %script{:src => "http://htcgen.herokuapp.com/static.js", :type => "text/javascript"}
      - else
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
      = csrf_meta_tags
      = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    .container
      - if action_name != 'show' && action_name != 'stdpage'
        = render 'layouts/prenavigation'
        = render 'layouts/messages'
        = yield
      - else
        = render 'layouts/navigation'
        = yield