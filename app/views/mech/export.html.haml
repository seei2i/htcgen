.container
  .row
    .col-md-12
      / %h2 Export Static Site
      / = form_tag(grasp_mech_path) do
      /   %label 
      /     %b Email: 
      /   = text_field_tag :exportemail
      /   %label 
      /     %b Password:
      /   = text_field_tag :exportpassword
      /   = submit_tag "Export Site"
      %h3 Current State Pages
      %ul
        - @states.each do |state|
          %li= link_to "#{state.name}", "http://htcgen.herokuapp.com/site/#{state.name.downcase.gsub(" ", "-")}.html"
      